  / CHANGE PASSWORD
  .changePassword.wrapper.showhide
    %h2.trigger.showhide
      %img{src: '/images/icons/key-16.png'}
      Change password

    .changePasswordForm.target.showhide.hidden
      =form_for @user, :url => '/user.json', :remote => true do |f|
        = f.password_field(:password, {placeholder: 'Current password'})
        = f.password_field(:password_confirmation, {placeholder: 'New password'})
        = f.password_field(:password_confirmation, {placeholder: 'Confirm new password'})

        .cancel cancel
        =f.submit :'change password', :class => 'confirm'
        .clear


